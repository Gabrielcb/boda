// each thread: computes outputs across chan dim, using inputs across chan dim
CUCL_GLOBAL_KERNEL void %(rtc_func_name)( GASQ float const * const loss_per_pel, GASQ float * const loss ) {
  int32_t const tix = GLOB_ID_1D;
  if( tix >= 1 ) { return; }
  float v = 0.0f;
  for( int32_t i = 0; i != %(sz); ++i ) { v += loss_per_pel[i]; }
  *loss = v / %(sz);
}

